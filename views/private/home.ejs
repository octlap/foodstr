<style>

.feed {
  margin: 60px 100px 50px 100px;
  display: flex;
  flex-direction: column;
  padding-left: 20px;
}

.hello{
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.grid{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.box{
  width: 30%;
  margin: 0 8px;
}

@media screen and (max-width: 600px) {
  .box {
    width: 100%;
    margin: 0;
  }
  .feed {
    margin: 60px 0 50px 0;
    padding-left: 0;
  }
}

@media screen and (min-width: 600px) and (max-width: 850px)  {
  .box {
    width: 50%;
    margin: 0;
  }
  .feed {
    margin: 60px 30px 50px 30px;
    padding-left: 0;
  }
}

@media screen and (min-width: 850px) and (max-width: 1050px)  {
  .feed {margin: 60px 30px 50px 30px;}
}

.panel-heading {
  background: url(images/restaurant.jpg) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 250px;
  border-radius: 0px !important;
}

.panel{
  border-color: white;
}

h3{
  margin: 0;
}

.photo{
  display: flex;
  position: relative;
  flex-direction: column;
}

.black-hover:hover{
  left: 0;
  position: absolute;
  top: 0;
  background-color: rgba(0,0,0,.7);
  bottom: 0;
  justify-content: center;
  right: 0;
}

</style>

<title><%= title %></title>

<div class="feed">

  <div class="hello">
    <% if (typeof user != "undefined") { %>
      <h1>Hello <%= user.firstName %>!</h1>
      <i class="fa fa-heart-o" aria-hidden="true"></i><br>
      <% } %>
  </div>

  <div class="grid"></div>

</div>

<script>
  window.places = <%- JSON.stringify(places) -%>
</script>
<script>
  window.user = <%- JSON.stringify(user) -%>
</script>
<script type="text/javascript" src="/javascripts/home.js"></script>
