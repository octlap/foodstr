<style>

.feed {
  margin: 60px 100px 50px 100px;
  display: flex;
  flex-direction: column;
}

.hello{
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.grid{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.box{
  width: 31%;
  margin: 0 6px;
}

@media screen and (max-width: 600px) {
  .box {
    width: 100%;
    margin: 0;
  }
  .feed {
    margin: 60px 0 50px 0;
    padding-left: 0;
  }
}

@media screen and (min-width: 600px) and (max-width: 850px)  {
  .box {
    width: 50%;
    margin: 0;
  }
  .feed {
    margin: 60px 30px 50px 30px;
    padding-left: 0;
  }
}

