<style>

.feed {
  margin: 60px 100px 50px 100px;
  display: flex;
  flex-direction: column;
}

.hello{
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.grid{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.box{
  width: 30%;
}

@media screen and (max-width: 600px) {
  .box {width: 100%;}
  .feed {margin: 60px 0 50px 0;}
}

@media screen and (min-width: 600px) and (max-width: 850px)  {
  .box {width: 50%;}
  .feed {margin: 60px 30px 50px 30px;}
}

@media screen and (min-width: 850px) and (max-width: 1050px)  {
  .feed {margin: 60px 30px 50px 30px;}
}

.panel-heading {
  background: url(http://www.miss-ko.com/photos/02-MissKo_002_602.jpg) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 250px;
  border-radius: 0px !important;
}

.panel{
  border-color: white;
}

h3{
  margin: 0;
}

.photo{
  display: flex;
  position: relative;
  flex-direction: column;
}

.black-hover:hover{
  left: 0;
  position: absolute;
  top: 0;
  background-color: rgba(0,0,0,.7);
  bottom: 0;
  justify-content: center;
  right: 0;
}

</style>

<title><%= title %></title>

<div class="feed">

  <div class="hello">
    <% if (typeof user != "undefined") { %>
      <h1>Hello <%= user.firstName %>!</h1>
      <% } %>
      <a href="/new">Click here to add a new place</a>
  </div>

  <div class="grid">

    <div class="box panel panel-default">
      <div class="panel-heading photo">
        <div class="" style=""></div>
        <div class="black-hover"></div>
      </div>
      <div class="panel-body">
        <h3>Chez moi</h3>
        <p>12 Rue Bochart de Saron 75009 Paris</p>
      </div>
    </div>

    <div class="box panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <h3>Chez moi</h3>
        <p>12 Rue Bochart de Saron 75009 Paris</p>
      </div>
    </div>

    <div class="box panel panel-default">
      <div class="panel-heading">
      </div>
