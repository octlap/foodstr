<style>

.feed {
  margin: 60px 100px 50px 100px;
  display: flex;
  flex-direction: column;
}

.hello{
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.grid{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.box{
  width: 31%;
  margin: 0 6px;
}

@media screen and (max-width: 600px) {
  .box {
    width: 100%;
    margin: 0;
  }
  .feed {
    margin: 60px 0 50px 0;
    padding-left: 0;
  }
}

@media screen and (min-width: 600px) and (max-width: 850px)  {
  .box {
    width: 50%;
    margin: 0;
  }
  .feed {
    margin: 60px 30px 50px 30px;
    padding-left: 0;
  }
}

@media screen and (min-width: 850px) and (max-width: 1050px)  {
  .feed {margin: 60px 30px 50px 30px;}
}

.panel-heading {
  background: url(images/restaurant.jpg) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  height: 250px;
  border-radius: 0px !important;
}

.panel{
  border-color: white;
  box-shadow: 0 1px 1px rgba(0,0,0,0.0);
}

h3{
  margin: 0;
}

.photo{
  display: flex;
  position: relative;
  flex-direction: column;
}

.black-hover {
  left: 0;
  position: absolute;
  top: 0;
  bottom: 0;
  justify-content: center;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.black-hover:hover {
  background-color: rgba(0,0,0,.5);
}

.hover-btn {
  margin: 0 10px;
  text-align: center;
  font-size: 25px;
  height: 40px;
  width: 40px;
  border-radius: 3px;
  border: none;
  padding-top: 5px;
}

.hover-btn:focus {
  outline:0;
}

.hover-btn.fave {
  /*background-color: #fd7555;*/
  color: white;
  background-color: rgba(253, 117, 85, 0.7);
}

.hover-btn.wish-list {
  background-color: #00bfff;
  color: white;
  background-color: rgba(0, 191, 255, 0.7);
}

.hidden {
  display: none;
}

</style>

<title><%= title %></title>

<div class="feed">

  <div class="hello">
    <h1>Hello <%= user.firstName %>!</h1>
    <p><i class='fa fa-heart-o' aria-hidden='true'></i>... Here are places that people recently added in Paris ...<i class='fa fa-heart-o' aria-hidden='true'></i></p>
  </div>

  <div class="grid">
  </div>

  </div>

</div>

<script>
  window.places = <%- JSON.stringify(places) -%>
</script>
<script>
  window.user = <%- JSON.stringify(user) -%>
</script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/javascripts/home.js"></script>
