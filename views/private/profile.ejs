<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<style>

.main-container {
  margin-top: 50px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#map {
  width: 70%;
  height: 450px;
  margin: 3px 0;
}

#profile-block {
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

#places-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.row-places {
  display: flex;
  justify-content: space-between;
  height: 150px;
  width: 50%;
  align-items: center;
}

.place-photo{
  display: block;
  height: 90%
}

.info-block{
  width: 60%;
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
}

.wish-list-controls {
  display: flex;
  justify-content: space-between;
}

.controls {
  height: 22px;
  border-radius: 3px;
  border: none;
  background-color: #f2f2f2;
  color: black;
  text-align: center;
  padding: 3px;
  margin-left: 5px;
  width: 22px;
}

.controls:focus {
  outline:0;
}


.wish-list {
  background-color: #00bfff;
  color: white;
  font-weight: 500;
  border-radius: 3px;
  width: 65px;
  height: 22px;
  text-align: center;
}

.wish-list.map {
  padding: 3px;
}

.wish-list.list {
  margin-left: 10px;
}

.favorite {
  background-color: #fd7555;
  color: white;
  font-weight: 500;
  border-radius: 3px;
  width: 55px;
  height: 22px;
  text-align: center;
}

.favorite.map {
  padding: 3px;
}

.favorite.list {
  margin-left: 10px;
}

hr {
  width: 70%;
  margin: 15px 0;
}

.id {
  display: none;
}

#


</style>


<title><%= title %></title>

<div class="main-container">

  <div id="profile-block">
    <h2 id="user-name"><%= user.firstName %> <%= user.lastName %></h2>
    <!-- <p>Short bio here</p> -->
  </div>

  <hr>
  <div id="map"></div>


  <div id="places-list">
    <% for (let i = places.length -1 ; i >= 0; i--) { %>
      <hr>
      <div class="row-places">
        <img class="place-photo" src="<%= places[i].photo %>">

        <div class="info-block">

          <%if (!places[i].status) { %>
            <div class="wish-list-controls">
              <button class="controls"><i class="fa fa-heart-o" aria-hidden="true"></i></button>
              <button class="controls"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
              <div class="wish-list list">Wish list</div>
            </div>
          <% } else { %>
            <div class="wish-list-controls">
              <button class="controls"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
              <div class="favorite list">Fave</div>
            </div>
          <% } %>
          <h2><%= places[i].name %></h2>
          <p><%= places[i].address %></p>
          <span class="id"><%= places[i].googlePlaceId %></span>
        </div>

      </div>


    <% } %>
  </div>

</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDPUH7jr-6r-tgbqKjsJJ6zB-ZmG2tyAs&libraries=places"></script>
<script>
  window.places = <%- JSON.stringify(places) -%>
</script>
<script type="text/javascript" src="/javascripts/profile.js"></script>
